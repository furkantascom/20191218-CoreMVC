@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<section>
    <a asp-controller="Home" asp-action="Insert" class="btn btn-success" style="margin:20px"> Ekle </a>
</section>
<table class="table table-group table-hover">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td> <a asp-action="Update" asp-route-id="@item.ProductID" class="btn btn-primary">  Güncelle </a> </td>
            <td> <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger"> Sil </a> </td>
        </tr>
    }
</table>

