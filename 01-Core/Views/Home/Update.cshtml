@model Product
@{
    ViewData["Title"] = "Update";
}

<form asp-controller="Home" asp-action="Update" method="post" class="form-group">
    <div class="form-group">
        <label asp-for="ProductName">ProductName</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Güncelle" />
    <button asp-action="Index" class="btn btn-danger">Vazgeç</button>
</form>

