@model Product
@{
    ViewData["Title"] = "Insert";
}

    <form asp-controller="Home" asp-action="Insert" method="post" class="form-group">
        <div class="form-group">
            <label asp-for="ProductName">ProductName</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Kayıt Ekle" />
        <button asp-action ="Index" class="btn btn-danger">Vazgeç</button>
    </form>

